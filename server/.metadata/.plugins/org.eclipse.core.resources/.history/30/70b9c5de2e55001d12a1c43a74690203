package Conponent;

import java.util.Arrays;

public class ChatRoom {
	public static final int MAX_CHATTING_ROOM = 100;
	public static final int MAX_CHATTING_LOG = 10;
	static int roomId;
	static int lastChatNumber;
	static String[] chatInfo = new String[MAX_CHATTING_LOG];
	static String[][] chatLog = new String[MAX_CHATTING_ROOM][MAX_CHATTING_LOG];
	
	public ChatRoom () {
		
	}
	
	public static boolean add(Option op, String chat) {
		chatInfo[0] = op.getId();
		chatInfo[1] = op.getName();
		chatInfo[2] = chat;
		chatLog[lastChatNumber] = chatInfo.clone();
		lastChatNumber++;
		return false;
	}
	
	//getter setter
	public static int getRoomId() {
		return roomId;
	}



	public static void setRoomId(int roomId) {
		ChatRoom.roomId = roomId;
	}

	

	
//	public static void main(String[] args) {
//		chatInfo[0] = "id";
//		chatInfo[1] = "name";
//		chatInfo[2] = "description";
//		
//		chatLog[0] = chatInfo.clone();
//		System.out.println(Arrays.deepToString(chatInfo));
//	}
}
