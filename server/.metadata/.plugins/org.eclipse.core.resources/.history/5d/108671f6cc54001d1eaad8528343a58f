package 알고리즘;

import java.util.Arrays;
import java.util.Iterator;

public class homework701 {

	static int[] save = new int[3];
	static int maxLength;
	
	public static int max(int[] arr) {
		int maxx = 0;
		
		for (int i = 0; i < arr.length; i++) {
			if (maxx < arr[i]) {
				maxx = arr[i];
			}			
		}
		
		return maxx;
	}
	
	public static int exp(int[] price, int[] disc, int wig) {
		if (save.length <= wig) {
			save = Arrays.copyOf(save, wig + 1);
		}
		
		if (wig != 1) {
			if (save[wig] == 0) {
				int[] temp = new int[save.length + 1];
				
				for (int i = 1; i < wig; i++) {
					temp[i - 1] = exp(price, disc, i) + exp(price, disc, wig - i) - disc[i - 1];
				}
				save[wig] = max(temp);
			}
		} else {
			save[1] = price[0];
		}
		
//		if (wig == 1) {
//			save[1] = price[0];
//			return save[1];
//		} else if (save[wig] == 0) {
//			int[] temp = new int[save.length + 1];
//			
//			for (int i = 1; i < wig; i++) {
//				temp[i - 1] = exp(price, disc, i) + exp(price, disc, wig - i) - disc[i - 1];
//			}
//			save[wig] = max(temp);
//		}
		
		if (save[wig] < price[wig - 1]) {
			save[wig] = price[wig-1];
		}
		return save[wig];
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] price = {3, 4, 8, 9};
		int[] disc = {1, 2, 1};
		
		System.out.println(exp(price, disc, 4));
	}
}
