package 과제정리;

import java.util.Arrays;

public class h7 {
	static int[] Save = new int[10];
	static int Sk = 0;
	
	public static int AA(int[] P,int[] C, int k) {
		if (k != 0) {
			for (int i = 0; i < P.length; i++) {
				Save[i] = P[i];
			}
			int[] A = new int[P.length];
			if (k > Sk) {
				for (int i = 1; i < k; i++) {
					System.out.println("loof" + Arrays.toString(Save) + i);
					A[i] = AA(P, C, i) + AA(P, C, k-i) - C[k];
				}
				Save[k] = max(A);
				Sk = k;
			}
		}		
		return Save[k];
	}
	
	public static int max(int[] A) {
		int result = 0;
		for (int i = 0; i < A.length; i++) {
			if (result < A[i]) {
				result = A[i];
			}
		}
		return result;
	}
	
	public static void main(String[] args) {
		int[] P = {3,4,8,9};
		int[] C = {1,2,1};
		
		System.out.println(AA(P,C,4));
	}
}
