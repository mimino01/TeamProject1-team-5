package 과제정리;

import java.util.Arrays;

public class h4 {
	public static int SA(int[] A, int i, int j) {
		System.out.println(Arrays.toString(A) + ":" + i + ":" + j);
		if (i == j || i == j-1) {
			return A[i];
		} else {
			return min(SA(A, i, (i + j)/2),SA(A, (i + j)/2 + 1, j));
		}
	}
	
	public static int min(int a, int b) {
		if (a <= b) {
			System.out.println(a);
			return a;
		} else {
			System.out.println(b);
			return b;
		}
	}
	
	public static void main(String[] args) {
		int[] A = {4,6,2,3,1,5,7,8,4,9};
		System.out.println(SA(A, 0, A.length -1));
	}
}
